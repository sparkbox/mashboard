@font-face
  font-family codemash
  font-style normal
  src url(../fonts/codemash.eot)
  src url(../fonts/codemash.eot?#iefix) format(embedded-opentype)
  src url(../fonts/codemash.svg#codemash) format(svg)
  src url(../fonts/codemash.woff) format(woff)
  src url(../fonts/codemash.ttf) format(truetype)
  font-weight normal
  font-style normal

[data-icon]:before
  font-family codemash
  content attr(data-icon)
  speak none
  font-weight normal
  line-height 1
  -webkit-font-smoothing antialiased

body
  background-color #ededed

// ---------------------
// Speakers
// ---------------------

.speaker-avatar
  padding-right 40px

.speaker-avatar-small
  height 30px
  width 30px

.speaker-avatar-medium
  height 100px
  width 100px

.speaker-name
  margin-left 40px

.speaker-name-small
  vertical-align bottom

.speaker-twitter
  vertical-align bottom

// ---------------------
// Nav
// ---------------------

.nav
  display block
  width 100%
  padding-bottom 1em
  @media (min-width: 330px)
    width 22em
    margin 0 auto
  @media (min-width: 500px)
    width 31em

.span-12 .nav-pills > li
  float none
  width 10em
  margin 0 auto

.navbar
  width 100%
  display block
  padding-bottom 1em
  background-color #bfbfbf

.navbar .nav
  width: 202px
  margin: 0 auto
  float none
  @media (min-width:659px)
    float right

.navbar .nav > li > a
  text-shadow none
  color black
  font-size 1.1em
  [data-icon]:before
    color white

.nav > li > a:hover
  background-color primaryOrange
  color white

.nav > li > a.active
  background-color primaryOrange

.nav > li > a.active:hover
  background-color primaryOrange

.navbar-inner
  border none
  border-radius none
  box-shadow none
  background-color transparent
  background-image none
  padding-top .5em

// ---------------------
// Sessions
// ---------------------

.session-buttons
  top 100px
  position relative
  text-align center
  @media (max-width: 767px)
    top 0
    margin-top 20px
    .btn
      display block
      padding 10px

.day-label
  font-family:"Museo Sans W01 500",sans-serif

.day-link
  color:#4d4d4d

// ---------------------
// Layout
// ---------------------

.container
  @media (max-width: 979px) and (min-width: 768px)
    width 100%
  @media (min-width: 940px)
    width 100%
  @media (min-width: 1200px)
    width 100%

body
  @media (max-width: 767px)
    padding 0

.long-day
  display none
  @media (min-width: 500px)
    display block

.short-day
  @media (min-width: 500px)
    display none

.nav-pills > li
  float none
  text-align center
  @media (min-width: 300px)
    float left
    text-align left
// ---------------------
// Theme
// ---------------------

.navbar .brand
  float none
  text-indent -999em
  background-image url(../images/logo.png)
  background-repeat no-repeat
  display block
  height 36px
  width 200px
  margin 0 auto
  @media (min-width:659px)
    margin: 0
    margin-left 1em
    float left

.session-detail
  background-color white

.well
  background-color transparent

h1, h2, h3, h4, h5, h6
  font-family:"PMNCaeciliaW01-55Roman", serif

.alert
  background-color white
  border none
  text-align center
  color primaryOrange

.btn-primary
  background-color primaryOrange
  background-image none

.btn:hover
  background-color primaryOrange
  -webkit-transition none
  background-image none
  color white
  text-shadow none

.session-title
  color black
  &:hover
    color primaryOrange
  &:visited
    color black

.session-detail .label
  text-shadow none