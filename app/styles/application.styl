@import 'nib'
@import 'colors'

// ---------------------
// Speakers
// ---------------------

.speaker-avatar
  padding-right 40px

.speaker-avatar-small
  height 30px
  width 30px

.speaker-avatar-medium
  height 100px
  width 100px

.speaker-name
  margin-left 40px

.speaker-name-small
  vertical-align bottom

.speaker-twitter
  vertical-align bottom

// ---------------------
// Sessions
// ---------------------

.session-buttons
  top 100px
  position relative
  text-align center
  @media (max-width: 767px)
    top 0
    margin-top 20px
    .btn
      display block
      padding 10px
