<div class="speaker-detail">
  <div class="row-fluid">
    <img {{bindAttr src="mediumAvatarURL"}} class="img-circle pull-left speaker-avatar-medium">
    <h1 class="speaker-name">{{name}}</h1>
    {{#if hasTwitterHandle}}
      <div>
        <a {{bindAttr href="twitterURL"}} class="twitter-user-name">
          @{{twitterUserName}}
        </a>
      </div>
    {{/if}}
  </div>
  <div class="row-fluid">
  <p class="speaker-bio">
   {{biography}}
  </p>
  <ul class="speaker-nav nav-list">
    <li class="nav-header">Speaking in {{loadedSessions.length}} {{pluralize loadedSessions}}</li>
    {{#each loadedSessions}}
      <li>
        {{template session_labels}}
        {{#linkTo session this class="session-link"}}
          {{title}}
        {{/linkTo}}
      </li>
    {{/each}}
  </ul>
  </div>
</div>
